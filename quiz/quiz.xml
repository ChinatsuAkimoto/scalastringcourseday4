  <!--Day4-1-->
  <question
      statement="MS932の正式名称（Canonical Name）を選べ。"
      feedback_for_correct_answer="MS932の正式名称はwindows-31jです。"
      feedback_for_incorrect_answer="MS932の正式名称はwindows-31jです。">
      type="ma">
    <choices>
      <choice answer="true">windows-31j</choice>
      <choice feedback="CP932は、Shift-JISからMS932に至るまでの変遷で登場した種々の文字コードを意味するエイリアスであり多義的ですが、最近はMS932と同じ文字コードのエイリアスとして使用されることが多いです。ただし、JavaではIBM CP932を指しwindows-31jではないです。">CP932</choice>
      <choice feedback="Shift-JISは、MS932の下位互換に相当する文字コードです。">Shift-JIS</choice>
      <choice feedback="UTF-8とMS932は別の文字コードです。両者とも多様な文字を表現したい場合に使用されます。">UTF-8</choice>
    </choices>
  </question>
  <!--Day4-2-->
  <question
      statement="UTF-8のCharsetを選べ。"
      feedback_for_correct_answer="StandardChasets.UTF_8かChaset.forName(&quot;UTF-8&quot;)でUTF-8のCharsetが得られます。"
      feedback_for_incorrect_answer="StandardChasetsクラスかChaset.forNameメソッドでChasetが得られます。">
      type="ma">
    <choices>
      <choice answer="true">StandardCharsets.UTF_8</choice>
      <choice feedback="StandardCharsetではなくStandardCharsetsです。">StandardCharset.UTF_8</choice>
      <choice feedback="UTF-8ではなくwindows-31jが得られます。">Charset.forName("MS932")</choice>
      <choice feedback="UTF-8ではなくShift-JISが得られます。">Charset.forName("sjis")</choice>
    </choices>
  </question>
  <!--Day4-3-->
  <question
      statement="new String(str.getBytes(&quot;EUC-JP&quot;), StandardCharsets.UTF_8)の説明として正しい文を選べ。"
      feedback_for_correct_answer="str: StringはUTF-16BE、getBytesでstrからEUC-JPのByte配列を返し、それをUTF-8と解釈してString (UTF-16BE)を生成します。"
      feedback_for_incorrect_answer="str: StringはUTF-16BE、getBytesでstrからEUC-JPのByte配列を返し、それをUTF-8と解釈してString (UTF-16BE)を生成します。">
      type="ma">
    <choices>
      <choice answer="true">UTF-16BEをEUC-JPで符号化しUTF-8で復号化</choice>
      <choice feedback="str: StringはUTF-16BEです。">UTF-8をEUC-JPで符号化しUTF-8で復号化</choice>
      <choice feedback="getBytesメソッドで符号化、Stringコンストラクタの第2引数で復号化">UTF-16BEをUTF-8で符号化しEUC-JPで復号化</choice>
      <choice feedback="str: StringはUTF-16BE、getBytesメソッドで符号化、Stringコンストラクタの第2引数で復号化">UTF-8をEUC-JPで復号化</choice>
    </choices>
  </question>
